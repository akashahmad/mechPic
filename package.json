        "postcss": "^7",
        "prettier": "2.2.1",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
